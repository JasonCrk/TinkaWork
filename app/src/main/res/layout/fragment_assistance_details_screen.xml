<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shared.ui.screens.AssistanceDetailsScreenFragment">

   <ImageButton
       android:id="@+id/backToHistoryScreenBtn"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_marginStart="25dp"
       android:layout_marginTop="30dp"
       android:contentDescription="back icon"
       android:src="@drawable/baseline_arrow_back_24"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:tint="?attr/colorPrimary"
       tools:ignore="HardcodedText,TouchTargetSizeCheck" />

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:orientation="vertical"
       app:layout_constraintTop_toBottomOf="@id/backToHistoryScreenBtn"
       android:layout_marginTop="25dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Domingo 10 de Diciembre del 2024"
          android:textColor="?attr/colorPrimary"
          android:layout_marginBottom="14dp"
          android:textSize="24.5sp"
          android:textStyle="bold" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Tiempo Total:"
          android:textColor="@color/gray"
          android:textSize="18sp" />

      <TextView
          android:text="00:00:00"
          android:textAlignment="center"
          android:textColor="?attr/colorPrimary"
          android:textSize="60sp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:ignore="HardcodedText" />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="340dp"
          android:layout_height="48dp"
          android:layout_marginTop="30dp"
          android:background="@drawable/item_details_assitence"
          android:backgroundTint="@color/bg_green_30_to_green_60"
          android:gravity="center"
          android:orientation="horizontal">

         <ImageView
             android:contentDescription="play icon"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:tint="@color/green"
             android:layout_marginStart="15dp"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:src="@drawable/ic_baseline_play_arrow_24"
             tools:ignore="HardcodedText" />

         <TextView
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:textColor="@color/green"
             android:layout_marginEnd="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="end"
             android:text="8:00 AM"
             android:textSize="18sp" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="340dp"
          android:layout_height="48dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/item_details_assitence"
          android:backgroundTint="@color/yellow_60_opacity"
          android:gravity="center"
          android:orientation="horizontal">

         <ImageView
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:tint="@color/dark_yellow"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="20dp"
             android:contentDescription="cofee icon"
             android:src="@drawable/ic_baseline_coffee_24"
             tools:ignore="HardcodedText" />

         <TextView
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:textColor="@color/dark_yellow"
             android:layout_marginEnd="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="end"
             android:text="1:00 PM - 3:00 PM"
             android:textSize="18sp" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="340dp"
          android:layout_height="48dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/item_details_assitence"
          android:gravity="center"
          android:orientation="horizontal"
          tools:layout_editor_absoluteX="37dp"
          tools:layout_editor_absoluteY="381dp">

         <ImageView
             android:contentDescription="exit icon"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:tint="@color/red"
             android:layout_marginStart="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/baseline_close_24"
             tools:ignore="HardcodedText" />

         <TextView
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:textColor="@color/red"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="end"
             android:layout_marginEnd="20dp"
             android:text="6:00 PM"
             android:textSize="18sp" />
      </androidx.constraintlayout.widget.ConstraintLayout>
   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>